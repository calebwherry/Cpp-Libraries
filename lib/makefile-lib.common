# Double directoy up because this path is expanded when it is included (which is a directory down):
include $(abspath ../../makefile.common)

OBJS = $(SRC:.cpp=.o)

default: $(LIB)

%.o: %.cpp
	$(CC) $(INCLUDES) $(CFLAGS) -c $< -o $@

$(LIB): $(OBJS)
	ar rcs $(LIB) $(OBJS)
	@cp $(LIB) $(BIN_DIR)

clean:
	rm -f $(OBJS) $(LIB) Makefile.bak makefile.bak
