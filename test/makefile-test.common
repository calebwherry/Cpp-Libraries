# Double directoy up because this path is expanded when it is included (which is a directory down):
include $(abspath ../../makefile.common)

.PHONY: clean

default: $(PROG)

OBJS = $(SRC:.cpp=.o)

$(PROG): $(OBJS)
	$(CC) $(CFLAGS) $(INCLUDES) -o $(PROG) $(OBJS) $(LFLAGS) $(LIBS)
	@cp $(PROG) $(BIN_DIR)

%.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDES) -c $<  -o $@

clean:
	$(RM) *.o *~ $(PROG)
